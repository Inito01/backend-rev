{
  "transform": {},
  "testMatch": ["**/test/**/*.test.js"],
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/app.js",
    "!src/domain/services/analyzers/**",
    "!src/infraestructure/database/models/**",
    "!**/node_modules/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "setupFilesAfterEnv": ["./test/setupTests.js"]
}
